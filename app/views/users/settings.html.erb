<h2 class="h2 mb-4">
  <%= current_user %> / Settings
</h2>

<div class="col-6 float-left pr-2">
  <div class="Box p-3">
    <a class="h3" href="<%= import_path(Match::LATEST_SEASON, current_user.primary_account) %>">
      Import match history for <%= current_user.primary_account %>
    </a>
    <div>
      Import competitive matches per season from a file.
    </div>
  </div>
</div>

<div class="col-6 float-left pl-2">
  <div class="Box p-3">
    <a class="h3" href="<%= confirm_season_wipe_path(Match::LATEST_SEASON, current_user.primary_account) %>">
      Wipe match history for <%= current_user.primary_account %>
    </a>
    <div>
      Remove matches by season.
    </div>
  </div>
</div>
