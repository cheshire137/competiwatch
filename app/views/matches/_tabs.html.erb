<nav class="tabnav-tabs d-flex flex-justify-between flex-items-center">
  <div>
    <a href="#match-history" class="tabnav-tab selected js-tab">
      <span class="ion hide-sm ion-ios-list-outline"></span>
      Match history
    </a>
    <% if can_edit && !past_season %>
      <%= render partial: 'matches/log_match_tabs',
                 locals: { oauth_account: oauth_account, season: season } %>
    <% end %>
    <% if matches.any? %>
      <a href="#trends" class="tabnav-tab js-trends-tab js-tab">
        <span class="ion hide-sm ion-stats-bars"></span>
        Trends
      </a>
      <% if can_edit %>
        <a href="#export-csv" class="tabnav-tab js-tab">
          <span class="ion hide-sm ion-ios-cloud-download-outline"></span>
          Export
        </a>
      <% end %>
    <% end %>
  </div>

  <% if can_edit %>
    <div>
      <% if past_season %>
        <%= render partial: 'matches/log_match_tabs',
                   locals: { oauth_account: oauth_account, season: season } %>
      <% end %>

      <div class="tabnav-tab">
        <div class="dropdown js-menu-container d-inline-block">
          <% season_is_public = oauth_account.season_is_public?(season) %>
          <button class="btn-link no-underline text-gray p-0 dropdown-toggle js-menu-target" type="button" aria-expanded="false" aria-haspopup="true">
            <% if season_is_public %>
              <span class="ion ion-eye mr-1 d-inline-block"></span>
              <span class="text-small">Visible to others</span>
            <% else %>
              <span class="ion ion-locked mr-1 d-inline-block"></span>
              <span class="text-small">Only visible to you</span>
            <% end %>
            <div class="dropdown-caret"></div>
          </button>
          <div class="dropdown-menu-content js-menu-content">
            <ul class="dropdown-menu season-share-dropdown-menu dropdown-menu-se">
              <li>
                <% if season_is_public %>
                  <%= form_tag season_share_path(season, oauth_account), method: :delete do %>
                    <button type="submit" class="dropdown-item btn-link">
                      <span class="ion ion-locked mr-1 d-inline-block"></span>
                      <span class="text-small">Only let me see my matches</span>
                    </button>
                  <% end %>
                <% else %>
                  <%= form_tag season_share_path(season, oauth_account) do %>
                    <button type="submit" class="dropdown-item btn-link">
                      <span class="ion ion-eye mr-1 d-inline-block"></span>
                      <span class="text-small">Allow others to view</span>
                    </button>
                  <% end %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</nav>
