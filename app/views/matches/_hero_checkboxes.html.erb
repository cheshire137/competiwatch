<% heroes.each_with_index do |hero, i| %>
  <div class="form-checkbox mb-0 <%= i > 0 ? 'mt-1' : 'mt-0' %>">
    <label for="hero-<%= hero.slug %>" class="d-flex flex-items-center">
      <input <% if match.hero_ids.include?(hero.id) %>checked<% end %> name="heroes[]" value="<%= hero.id %>" id="hero-<%= hero.slug %>" type="checkbox">
      <%= image_tag("heroes/#{hero.slug}.png", alt: hero.name, class: 'd-inline-block rounded-2 hero-portrait flex-shrink-0 mx-2', width: 20, height: 20) %>
      <div class="no-wrap">
        <span class="text-<%= hero.slug %>"><%= hero.name %></span>
      </div>
    </label>
  </div>
<% end %>
