<div class="player-summary-header d-flex flex-justify-center flex-items-center mb-4">
  <% if profile.portrait_url %>
    <img src="<%= profile.portrait_url %>" class="avatar mr-4 flex-shrink-0" width="75" alt="<%= profile.username %> portrait">
  <% end %>
  <div>
    <h2 class="h4 my-0 text-center"><%= oauth_account %></h2>
    <div class="d-flex flex-items-center flex-justify-center">
      <% if profile.sr %>
        <%= rank_image(profile.sr, classes: 'd-inline-block mr-1 flex-shrink-0') %>
      <% end %>
      <span class="d-inline-block text-bold">
        <% if profile.sr %>
          <%= profile.sr %>
        <% else %>
          Unranked
        <% end %>
      </span>
      <span class="d-inline-block ml-3 text-gray"><%= stats.tldr %></span>
    </div>
  </div>
  <% if profile.level %>
    <div class="text-center level-container ml-4">
      <span class="text-bold">Level <%= number_with_delimiter profile.level %></span>
      <div class="d-flex flex-items-center">
        <div class="position-relative level-star-container">
          <% if profile.level_url %>
            <img class="d-inline-block level-image flex-shrink-0" width="100" height="100" src="<%= profile.level_url %>" alt="Level <%= profile.level %>">
          <% end %>
          <% if profile.star_url %>
            <img class="d-inline-block star-image flex-shrink-0" width="100" height="50" src="<%= profile.star_url %>" alt="Level <%= profile.level %>">
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
