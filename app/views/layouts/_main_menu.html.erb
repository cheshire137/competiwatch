<div class="dropdown js-menu-container">
  <button class="btn-link py-3 no-underline text-bold dropdown-toggle js-menu-target" type="button" aria-expanded="false" aria-haspopup="true">
    <span class="hide-sm">
      <span class="text-gray d-inline-block mr-1 text-normal">Signed in as</span>
      <%= avatar_for(current_account) %>
      <%= current_account.name %>
      <span class="dropdown-caret"></span>
    </span>
    <span class="d-inline-block-sm main-nav-link ion-navicon-round ion"></span>
  </button>
  <div class="dropdown-menu-content js-menu-content">
    <ul class="dropdown-menu main-dropdown-menu dropdown-menu-sw">
      <li>
        <a class="dropdown-item <%= 'selected' if is_settings_page? %>" href="<%= settings_path %>">Settings</a>
      </li>
      <% if current_season_number && current_battletag_param %>
        <li>
          <a href="<%= import_path(current_season_number, current_battletag_param) %>" class="dropdown-item <%= 'selected' if is_import_page?(current_season_number, current_battletag_param) %>">Import matches</a>
        </li>
      <% end %>
      <li>
        <a href="<%= export_path %>" class="dropdown-item <%= 'selected' if is_page?('export', 'index') %>">Export matches</a>
      </li>
      <li>
        <a href="<%= help_path %>" class="dropdown-item <%= 'selected' if is_page?('pages', 'help') %>">Help</a>
      </li>
      <li>
        <%= form_tag sign_out_path, method: :delete do %>
          <button type="submit" class="dropdown-item btn-link">
            Log out
          </button>
        <% end %>
      </li>
    </ul>
  </div>
</div>
