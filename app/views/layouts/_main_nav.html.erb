<div class="sticky-nav bg-white">
  <nav class="UnderlineNav d-flex-md flex-justify-between-md">
    <div class="UnderlineNav-body">
      <%
        season = params[:season] || Match::LATEST_SEASON
        battletag = current_battletag
      %>
      <% if content_for?(:match_tabs) %>
        <%= yield :match_tabs %>
      <% else %>
        <a href="<%= matches_path(season, battletag) %>" class="UnderlineNav-item <%= 'selected' if is_matches_page?(season, battletag) %>" role="tab">Matches</a>
      <% end %>
      <a href="<%= trends_path(season, battletag) %>" class="UnderlineNav-item <%= 'selected' if is_trends_page?(season, battletag) %>" role="tab">Trends</a>
      <% if signed_in? %>
        <a href="<%= export_path %>" class="UnderlineNav-item <%= 'selected' if is_page?('export', 'index') %>" role="tab">Export</a>
      <% end %>
    </div>

    <div class="UnderlineNav-body">
      <% if signed_in? %>
        <a class="UnderlineNav-item <%= 'selected' if is_settings_page? %>" role="tab" href="<%= settings_path %>">Settings</a>
        <%= form_tag sign_out_path, method: :delete do %>
          <button type="submit" class="UnderlineNav-item btn-link">
            Log out
          </button>
        <% end %>
      <% elsif !is_page?('login', 'index') %>
        <a class="UnderlineNav-item" role="tab" href="<%= user_bnet_omniauth_authorize_path %>">Log in with Battle.net</a>
      <% end %>
    </div>
  </nav>
</div>
<% if content_for?(:breadcrumb) %>
  <div class="mt-2 text-gray">
    <%= yield :breadcrumb %>
  </div>
<% end %>
