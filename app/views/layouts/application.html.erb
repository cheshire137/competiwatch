<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Competiwatch</title>
    <%= csrf_meta_tags %>
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta content="width=device-width,initial-scale=1" name="viewport">
    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>
  <body>
    <% if alert.present? %>
      <p class="p-3 m-4 rounded-2 flash-error"><%= alert %></p>
    <% end %>
    <% if notice.present? %>
      <p class="p-3 m-4 rounded-2 flash-success"><%= notice %></p>
    <% end %>
    <header class="my-4">
      <div class="container">
        <div class="d-flex flex-justify-between flex-items-center">
          <h1 class="h1">Competiwatch</h1>
          <% if signed_in? %>
            <%= current_user %>
          <% end %>
        </div>
      </div>
    </header>
    <div class="container my-4">
      <%= yield %>
    </div>
    <%= javascript_pack_tag 'application' %>
  </body>
</html>
