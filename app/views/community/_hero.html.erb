<div class="mb-2 d-flex-md flex-items-center-md flex-justify-center-md">
  <div class="win-bar-container d-inline-block mr-3">
    <span class="win-bar d-inline-block rounded-2" style="width: <%= hero_bar_width(win_percentage, max_hero_win_percentage, 100) %>%; background-color: <%= win_rate_color(win_percentage + 10) %>"></span>
  </div>
  <div class="d-flex flex-items-center">
    <%= hero_image(hero) %>
    <% if win_percentage %>
      <div>
        <strong><%= hero %></strong>:
        <%= win_percentage %>% of games won
        <div class="note">
          <%= number_with_delimiter match_count %>
          <%= 'match'.pluralize(match_count) %>
        </div>
      </div>
    <% else %>
      <strong><%= hero %></strong>:
      <em>No matches logged</em>
    <% end %>
  </div>
</div>
