<%
  account = local_assigns[:account] || current_account
  season = local_assigns[:season] || Season.current_or_latest_number
%>

<nav class="subnav" aria-label="Respository">
  <% if local_assigns[:account] %>
    <%= account_switcher(account, classes: 'subnav-item') %>
  <% end %>
  <% if local_assigns[:season] %>
    <%= season_switcher(season, classes: 'subnav-item') %>
  <% end %>
  <a href="<%= trends_path(season, account) %>" class="subnav-item <%= 'selected' if is_trends_page?(season, account) %>" role="tab" aria-current="page">
    Current account, Current season
  </a>
  <% if accounts.size > 1 %>
    <a href="<%= all_accounts_trends_path(season) %>" class="subnav-item <%= 'selected' if is_all_accounts_trends_page? %>">
      All accounts, Current season
    </a>
  <% end %>
  <a href="<%= all_seasons_trends_path(account) %>" class="subnav-item <%= 'selected' if is_all_seasons_trends_page?(account) %>">
    Current account, All seasons
  </a>
  <% if accounts.size > 1 %>
    <a href="<%= all_seasons_accounts_path %>" class="subnav-item <%= 'selected' if is_all_seasons_accounts_page? %>">
      All accounts, All seasons
    </a>
  <% end %>
</nav>
