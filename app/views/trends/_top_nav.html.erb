<%
  account = local_assigns[:account] || current_account
  season = local_assigns[:season] || Season.current_or_latest_number
%>

<% if accounts.size > 1 %>
  <nav class="subnav d-inline-block mr-4" aria-label="Respository">
    <%= account_switcher(local_assigns[:account], classes: "subnav-item #{'selected' if local_assigns[:account]}") %>
    <% if is_all_seasons_accounts_page? || !local_assigns[:season] %>
      <a href="<%= all_seasons_accounts_path %>" class="subnav-item <%= 'selected' if is_all_seasons_accounts_page? %>">
        All accounts
      </a>
    <% else %>
      <a href="<%= all_accounts_trends_path(season) %>" class="subnav-item <%= 'selected' if is_all_accounts_trends_page? %>">
        All accounts
      </a>
    <% end %>
  </nav>
<% end %>

<nav class="subnav d-inline-block" aria-label="Respository">
  <%= season_switcher(local_assigns[:season], classes: "subnav-item #{'selected' if local_assigns[:season]}") %>
  <% if is_all_seasons_accounts_page? || !local_assigns[:account] %>
    <a href="<%= all_seasons_accounts_path %>" class="subnav-item <%= 'selected' if is_all_seasons_accounts_page? %>">
      All seasons
    </a>
  <% else %>
    <a href="<%= all_seasons_trends_path(account) %>" class="subnav-item <%= 'selected' if is_all_seasons_trends_page?(account) %>">
      All seasons
    </a>
  <% end %>
</nav>
