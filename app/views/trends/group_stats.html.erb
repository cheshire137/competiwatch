<h3 class="h3 flex-justify-center d-flex flex-items-center mb-2">
  Win Rates by Group
  <span class="text-gray text-normal h4 d-inline-block ml-2">Season <%= @season %></span>
</h3>
<% @win_rates_by_group_members.each do |friend_names, win_rate| %>
  <div class="d-flex flex-items-center mb-1 tooltipped tooltipped-e" aria-label="<%= pluralize(@match_counts_by_group_members[friend_names], 'match') %>">
    <span class="d-inline-block text-right text-bold mr-2 group-members-label"><%= friend_names.join(', ') %></span>
    <span class="group-win-rate-label text-center mr-2"><%= win_rate %>% win rate</span>
    <span class="d-flex flex-auto">
      <span class="group-members-bar hero-bar-lucio d-inline-block rounded-2" style="width: <%= win_rate %>%"></span>
    </span>
  </div>
<% end %>
